<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.koreait.shopping.board.BoardMapper">

    <select id="selBoardList" resultType="BoardDto">
        SELECT *
        FROM board_list
        WHERE category_num = ${isubcategory}
    </select>

    <select id="selBoardDetail" resultType="BoardVo">
        SELECT *
        FROM board_list A
        LEFT JOIN board_detail B
        ON A.iboard = B.iboard
        WHERE A.iboard = ${isubcategory}
    </select>
</mapper>